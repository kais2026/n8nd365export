{
  "nodes": [
    {
      "parameters": {
        "triggerTimes": [
          {
            "mode": "everyDay",
            "hour": 18
          }
        ]
      },
      "name": "Schedule Trigger",
      "type": "n8n-nodes-base.cron",
      "typeVersion": 1,
      "position": [200, 300]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT article, reference, emplacement, qte_dispo, qte_reservee, (qte_dispo - qte_reservee) as qte_libre FROM stock"
      },
      "name": "Get Stock Data",
      "type": "n8n-nodes-base.mysql",
      "typeVersion": 1,
      "position": [500, 300]
    },
    {
      "parameters": {
        "operation": "write",
        "options": {},
        "binaryData": false,
        "fileName": "Stock_{{$now.format('YYYY-MM-DD_HH-mm')}}.xlsx"
      },
      "name": "Create Excel File",
      "type": "n8n-nodes-base.spreadsheetFile",
      "typeVersion": 1,
      "position": [800, 300]
    },
    {
      "parameters": {
        "fromEmail": "quais.selmi@gmail.com",
        "toEmail": "quais.selmi@gmail.com",
        "subject": "Stock disponible du {{$now.format('DD/MM/YYYY')}}",
        "text": "Veuillez trouver en pièce jointe le stock disponible à 18h.",
        "attachments": "={{$binary.data}}"
      },
      "name": "Send Email",
      "type": "n8n-nodes-base.emailSend",
      "typeVersion": 1,
      "position": [1100, 300]
    }
  ],
  "connections": {
    "Schedule Trigger": {
      "main": [
        [
          {
            "node": "Get Stock Data",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Get Stock Data": {
      "main": [
        [
          {
            "node": "Create Excel File",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Create Excel File": {
      "main": [
        [
          {
            "node": "Send Email",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}
